<div class="new-container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>予定入力</h1>
    </div>
    <% @reservation.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <div class="col-12 mt-3 host-content">
      <%= form_with url:host_create_path, class: 'form' do |form| %>
        <div class="day form-group">
          <%= form.label :day, '日付' %>
          <div class="form-box">
            <%= form.text_field :day, name: 'day', class: 'form-control', value: @day, readonly: true %>
          </div>
        </div>
        <div class="host-new-time form-group">
          <p>開始時間</p>
          <div class="host-form-box">
            <%= form.number_field :s_time_hour,in: 8..21, name: 's_time_hour', class: 'host-form-control'%>
            <a>:</a>
            <%= form.number_field :s_time_minute,in: 0..30,step: 30, name: 's_time_minute', class: 'host-form-control'%>
          </div>
        </div>
        <div class="host-new-time  form-group">
          <p>終了時間</p>
          <div class="host-form-box">
            <%= form.number_field :e_time_hour,in: 8..21, name: 'e_time_hour', class: 'host-form-control'%>
            <a>:</a>
            <%= form.number_field :e_time_minute,in: 0..30,step: 30, name: 'e_time_minute', class: 'host-form-control'%>
          </div>
        </div>
        <%= form.hidden_field :tell,  value: @tell %>
        <%= form.hidden_field :name,  value: @name %>
        <%= form.hidden_field :time,  value: @time %>
    
        <div class="menu_select form-group">
          <div class="host-submit" id="submit">
            <%= form.submit value: '予定を入れる', class: 'submit_btn' %>
          </div>
        </div>
      <% end %>
      <div class="col-12 text-right">
        <%= link_to '戻る', host_path %>
      </div>
    </div>
    <div class="text-center">
      <h1>新規予約</h1>
    </div>
    <div class="col-12 mt-3 content">
      <%= form_with(model: @reservation) do |f| %>
        <div class="day form-group">
          <%= f.label :day, '日付' %>
          <div class="form-box">
            <%= f.text_field :day, class:  'form-control', value: @day, readonly: true %>
          </div>
        </div>
        <div class="time form-group">
          <%= f.label :time, '時間' %>
          <div class="form-box">
            <%= f.text_field :time, class: 'form-control', value: @time, readonly: true %>
          </div>
        </div>
        <div class="name form-group">
          <%= f.label :name,'名前' %>
          <div class="form-box">
            <%= f.text_field :name, class: 'form-control'%>
          </div>
        </div>
        <div class="tell form-group">
          <%= f.label :tell,'電話番号' %>
          <div class="form-box">
            <%= f.text_field :tell, class: 'form-control', placeholder: '例)08011112222'%>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :menu, 'メニュー' %>
          <div class="menu-form">
            <%= f.select :menu, {'ボディケア 60分': 0,'ボディケア 90分': 1, 'ボディケア 120分': 2, '鍼灸マッサージ 60分': 3, '鍼灸マッサージ 90分': 4, '鍼灸マッサージ 120分': 5, '美容鍼 60分': 6, '期間限定 60分': 9}, { include_blank: '選択してください'}, {class: 'menu-select'} %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :option, 'オプション' %>
          <div class="menu-form">
            <%= f.select :option, {'なし': 0, 'ボディケア 20分': 1 }, {}, {class: 'menu-select'} %>
          </div>
        </div>
        <%= f.hidden_field :s_time, value:@time %>
        <div class="form-group">   
          <div class="submit" id="submit">
            <%= f.submit value: '予約する', class: "submit_btn" %>
          </div>
        </div>
      <% end %>
      <div class="col-12 text-right">
        <%= link_to '戻る', host_path %>
      </div>
    </div>
  </div>
</div>