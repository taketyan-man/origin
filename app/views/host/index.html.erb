<div class="container">
  <div class="booking-check"  style="display: none;">
    <h1 class="host-title" style="text-align: center;">予約確認</h1>
    <div class="bookingCheckBox">
    
    <% @booking.each do |book| %>
      <div class="booking-role">
        <div class="book-check-date"><%= book.day.month.to_s + "/" + book.day.day.to_s %></div>
        <div class="book-check-time"><%= book.s_time %></div>
        <div class="book-check-name"><%= link_to "#{book.name}様", user_show_path(date_time: book.date_time) %>
      </div>
        <div class="book-check-tell"><%= book.tell %></div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="schedule">
    <div class="col-12 text-center">
      <h1 class="host-title">予定入力</h1>
      <p>2ヶ月先まで予約することができます。</p>
    </div>
    <div class="col-12 mt-3">
      <%= week_calendar attribute: :day, events: @reservations do |date, reservations| %>
        <%= date.month %>
        <a> /</a>
        <%= date.day %>
      <% end %>
    </div>
  </div>
</div>