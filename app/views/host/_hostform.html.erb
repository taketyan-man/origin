<div class="day form-group">
  <%= f.label :day, '日付' %>
  <div class="form-box">
    <%= f.text_field :day, name: 'day', class: 'form-control', value: @day, readonly: true %>
  </div>
</div>
<div class="host-new-time form-group">
  <p>開始時間</p>
  <div class="host-form-box">
    <%= f.number_field :s_time_hour,in: 8..21, name: 's_time_hour', class: 'host-form-control'%>
    <a>:</a>
    <%= f.number_field :s_time_minute,in: 0..30,step: 30, name: 's_time_minute', class: 'host-form-control'%>
  </div>
</div>
<div class="host-new-time  form-group">
  <p>終了時間</p>
  <div class="host-form-box">
    <%= f.number_field :e_time_hour,in: 8..21, name: 'e_time_hour', class: 'host-form-control'%>
    <a>:</a>
    <%= f.number_field :e_time_minute,in: 0..30,step: 30, name: 'e_time_minute', class: 'host-form-control'%>
  </div>
</div>