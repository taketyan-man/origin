<div class="new-container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約画面</h1>
    </div>
    <h3 class="text-center time-atent">※施術時間に施術服に着替えていただく時間(30分)は含まれません</h3>
    <% @reservation.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <div class="col-12 mt-3 content">
      <%= form_with url:booking_date_create_path, class: 'form' do |form| %>
      <div class="day form-group">
        <%= form.label :day, '日付' %>
        <div class="form-box">
          <%= form.text_field :day, name: 'day', class: 'form-control', value: @day, readonly: true %>
        </div>
      </div>
      <div class="time form-group">
        <%= form.label :time, '時間' %>
        <div class="form-box">
          <%= form.text_field :time, name: 'time', class: 'form-control', value: @time, readonly: true %>
        </div>
      </div>
      <div class="name form-group">
        <%= form.label :name,'名前' %>
        <div class="form-box">
          <%= form.text_field :name, name: 'name', class: 'form-control'%>
        </div>
      </div>
      <div class="tell form-group">
        <%= form.label :tell,'電話番号' %>
        <div class="form-box">
          <%= form.text_field :tell, name: 'tell', class: 'form-control', placeholder: '例)08011112222'%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :menu, 'メニュー' %>
        <div class="menu-form">
          <%= form.select :menu, {'ボディケア 60分': 0,'ボディケア 90分': 1, '鍼灸マッサージ 60分': 2, '鍼灸マッサージ 90分': 3, '美容鍼 60分': 4}, { include_blank: '選択してください'}, {class: 'menu-select'} %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :option, 'オプション' %>
        <div class="menu-form">
          <%= form.select :option, {'ボディケア 30分': 0, '鍼灸マッサージ 30分': 1, 'アロマオイル 30分': 2, '期間限定 30分': 3}, { include_blank: 'なし'}, {class: 'menu-select'} %>
        </div>
      </div>
      <div class="form-group">   
        <div class="submit" id="submit">
          <%= form.submit value: '予約する', class: "submit_btn" %>
        </div>
      </div>
    <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', booking_date_path %>
    </div>
    </div>
  </div>
</div>