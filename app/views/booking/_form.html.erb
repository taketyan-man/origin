<%= form_with(model: @reservation) do |f| %>
  <div class="day form-group">
    <%= f.label :day, '日付' %>
      <div class="form-box">
        <%= f.text_field :day, class:  'form-control', value: @day, readonly: true %>
      </div>
    </div>
  <div class="time form-group">
    <%= f.label :time, '時間' %>
    <div class="form-box">
      <%= f.text_field :time, class: 'form-control', value: @time, readonly: true %>
    </div>
  </div>
  <div class="name form-group">
    <%= f.label :name,'名前' %>
    <div class="form-box">
      <%= f.text_field :name, class: 'form-control'%>
    </div>
  </div>
  <div class="tell form-group">
    <%= f.label :tell,'電話番号' %>
    <div class="form-box">
      <%= f.text_field :tell, class: 'form-control', placeholder: '例)08011112222'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :menu, 'メニュー' %>
    <div class="menu-form">
      <%= f.select :menu, {'ボディケア 60分': 0,'ボディケア 90分': 1, 'ボディケア 120分': 2, '鍼灸マッサージ 60分': 3, '鍼灸マッサージ 90分': 4, '鍼灸マッサージ 120分': 5, '美容鍼 60分': 6, '期間限定 60分': 9}, { include_blank: '選択してください'}, {class: 'menu-select'} %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :option, 'オプション' %>
    <div class="menu-form">
      <%= f.select :option, {'なし': 0, 'アロマオイル 20分': 1 }, {}, {class: 'menu-select'} %>
    </div>
  </div>
  <%= f.hidden_field :s_time, value:@time %>
  <div class="form-group">   
    <div class="submit" id="submit">
      <%= f.submit value: '予約する', class: "submit_btn" %>
    </div>
  </div>
<% end %>